---
import Section from "@/components/Section.astro";

import { languages } from "@cv_english";
---

<Section title="Languages">
  <ul>
    {
      languages.map(({ language, fluency }) => {
        return (
          <li>
            <article>
              <h3>{language}</h3>
              <p>{fluency}</p>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }
  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }
  article h3 {
    margin-bottom: 4px;
    font-weight: 500;
    color: #111;
  }
  article p {
    font-size: 0.9rem;
    line-height: 1.2rem;
  }
</style>
