---
import Section from "../Section.astro";

import { education } from "@cv_english";
---

<Section title="Education">
  <ul>
    {
      education.map(
        ({ institution, startDate, endDate, area, courses, studyType }) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Actual";
          const years = `${startYear} - ${endYear}`;

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{institution}</h3>
                    <h4>{studyType}</h4>
                  </div>

                  <time>{years}</time>
                </header>

                <footer>
                  <p>{area}</p>
                  {courses.map(({ name, courseUrl }) => (
                    <a href={courseUrl} target="_blank">
                      {name}
                    </a>
                  ))}
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    font-weight: 400;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  footer {
    display: inline-flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  footer a {
    border: 1px solid #f2f2f2;
    border-radius: 8px;
    padding: 0.2rem 0.6rem;
    margin-inline: -0.6rem;
    font-size: 0.8rem;
    font-weight: 540;
    color: #222;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
